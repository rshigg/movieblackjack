{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "remix build",
		"prebuild": "npm run generate:css -- --minify",
		"deploy": "fly deploy --remote-only",
		"dev:remix": "remix dev",
		"dev:css": "npm run generate:css -- --watch",
		"dev": "run-p \"dev:*\"",
		"generate:css": "tailwindcss -o ./app/styles/tailwind.css",
		"start": "remix-serve build",
		"format": "prettier --write .",
		"lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"typecheck": "tsc",
		"postinstall": "xstate typegen \"./app/machines/**/*.ts\""
	},
	"dependencies": {
		"@remix-run/node": "^1.6.8",
		"@remix-run/react": "^1.6.8",
		"@remix-run/serve": "^1.6.8",
		"@tailwindcss/forms": "^0.5.2",
		"@xstate/react": "^3.0.1",
		"nanoid": "^4.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tiny-invariant": "^1.2.0",
		"xstate": "^4.33.3"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.6.8",
		"@remix-run/eslint-config": "^1.6.8",
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"@xstate/cli": "^0.3.2",
		"autoprefixer": "^10.4.8",
		"eslint": "^8.22.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.16",
		"tailwindcss": "^3.1.8",
		"tmdb-ts": "^0.0.13",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">=16"
	},
	"prettier": {
		"singleQuote": true,
		"printWidth": 100,
		"useTabs": true,
		"tabWidth": 2
	}
}
