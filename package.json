{
	"name": "movieblackjack",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "remix build",
		"build:server": "esbuild --platform=node --format=cjs ./server --outdir=build --bundle",
		"dev": "run-p dev:*",
		"dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
		"dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
		"dev:remix": "cross-env NODE_ENV=development remix watch",
		"dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config ./build/server.js",
		"docker": "docker-compose up -d",
		"generate:css": "tailwindcss -o ./app/styles/tailwind.css",
		"start": "cross-env NODE_ENV=production node ./build/server.js",
		"lint": "rome check app/* --apply-suggested",
		"typecheck": "tsc -b",
		"postinstall": "xstate typegen \"./app/machines/**/*.ts\""
	},
	"dependencies": {
		"@remix-run/express": "^1.8.0",
		"@remix-run/node": "^1.8.0",
		"@remix-run/react": "^1.8.0",
		"@remix-run/serve": "^1.8.0",
		"@tailwindcss/forms": "^0.5.3",
		"@types/bcryptjs": "^2.4.2",
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.14",
		"@types/morgan": "^1.9.3",
		"@xstate/react": "^3.0.1",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"cross-env": "^7.0.3",
		"express": "^4.18.2",
		"morgan": "^1.10.0",
		"nanoid": "^4.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"socket.io": "^4.5.4",
		"socket.io-client": "^4.5.4",
		"tiny-invariant": "^1.3.1",
		"xstate": "^4.34.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.8.0",
		"@remix-run/eslint-config": "^1.8.0",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@xstate/cli": "^0.3.3",
		"autoprefixer": "^10.4.13",
		"dotenv": "^16.0.3",
		"esbuild": "^0.15.17",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.19",
		"rome": "^10.0.1",
		"tailwindcss": "^3.2.4",
		"tmdb-ts": "^0.0.13",
		"typescript": "^4.9.3"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "pnpm@7.18.0"
}
