{
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"ignore": ["./build/*"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"ignore": ["./build/*"],
		"rules": {
			"recommended": true,
			"a11y": {
				"noAutofocus": "off"
			},
			"style": {
				"noImplicitBoolean": "off",
				"useBlockStatements": "off",
				"useSelfClosingElements": "warn"
			},
			"correctness": {
				"noDelete": "off"
			}
		}
	}
}
